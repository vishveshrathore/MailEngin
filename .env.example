# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database
MONGO_URI=mongodb://localhost:27017/mailengin

# JWT Authentication
# Generate strong secrets: openssl rand -base64 32
JWT_ACCESS_SECRET=your-super-secret-access-token-key
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Redis (Required for queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS Configuration (SES/SNS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# AWS SES Settings
SES_SENDING_RATE=14
SES_CONFIGURATION_SET=mailengin-tracking
EMAIL_FROM_NAME=MailEngin
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# AWS SNS Topics (found in AWS Console > SNS > Topics)
SNS_BOUNCE_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:ses-bounces-topic
SNS_COMPLAINT_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:ses-complaints-topic

# Tracking
TRACKING_DOMAIN=http://localhost:3000 # Base URL for tracking pixels/links
